<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".question_dis">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="5dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.402">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 5/10"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50/100"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="right"/>



            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="What is the capital of France?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="150dp"
                android:layout_gravity="center_horizontal"/>

            <RadioGroup
                android:id="@+id/optionsRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_gravity="bottom">

                <RadioButton
                    android:id="@+id/optionARadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Paris"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/radio_selector"
                    android:button="@color/white"/>

                <RadioButton
                    android:id="@+id/optionBRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/radio_selector"
                    android:text="Berlin"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:button="@color/white"/>

                <RadioButton
                    android:id="@+id/optionCRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/radio_selector"
                    android:text="London"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:button="@color/white"/>

                <RadioButton
                    android:id="@+id/optionDRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/radio_selector"
                    android:text="Rome"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:button="@color/white"/>
            </RadioGroup>
        </FrameLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>




